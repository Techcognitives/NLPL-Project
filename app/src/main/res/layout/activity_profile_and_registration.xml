<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".ui.ui.activities.ProfileAndRegistrationActivity">

    <include
        android:id="@+id/profile_registration_action_bar"
        layout="@layout/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/addBankDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_de_active_medium_small"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/addBank"
        android:onClick="onClickProfileAndRegister"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view_bank_details_constrain"
        app:layout_constraintStart_toStartOf="@+id/view_bank_details_constrain"
        app:layout_constraintTop_toBottomOf="@+id/view_bank_details_constrain" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addTrucksDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_small"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_truck_details"
        app:layout_constraintStart_toStartOf="@+id/menu_truck_details"
        app:layout_constraintTop_toBottomOf="@+id/menu_truck_details">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trucks_list_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/addTruck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_de_active_medium_small"
        android:gravity="center"
        android:padding="1dp"
        android:onClick="onClickProfileAndRegister"
        android:text="@string/addTruck"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTrucksDone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/driverDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_small"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@+id/menu_driver_details"
        app:layout_constraintStart_toStartOf="@+id/menu_driver_details"
        app:layout_constraintTop_toBottomOf="@+id/menu_driver_details">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/driver_list_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/addDriverDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/button_de_active_medium_small"
        android:gravity="center"
        android:padding="1dp"
        android:onClick="onClickProfileAndRegister"
        android:text="@string/addDriver"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/driverDone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/driverDone"
        app:layout_constraintTop_toBottomOf="@+id/driverDone" />

    <include
        android:id="@+id/profile_registration_bottom_nav_bar"
        layout="@layout/bottom_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>