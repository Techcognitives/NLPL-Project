<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.activities.ViewTruckDetailsActivity">

    <TextView
        android:id="@+id/view_truck_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_active"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/AddTrucks"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/view_truck_details_back_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onClickBackViewTruckDetails"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_truck_details_title"
        app:layout_constraintStart_toStartOf="@+id/view_truck_details_title"
        app:layout_constraintTop_toTopOf="@+id/view_truck_details_title"
        app:layout_constraintVertical_bias="0.458"
        app:srcCompat="@drawable/ic_back_small"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>