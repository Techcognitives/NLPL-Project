<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/load_shadow"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/my_driver_list_driver_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/success_small"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_driver_list_edit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_edit_small"
        android:drawableTint="@color/button_blue"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Edit"
        android:textAlignment="textStart"
        android:textColor="@color/button_blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_selfie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_driver_list_driver_selfie"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_selfie"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/my_driver_list_preview_driver_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="@string/DriverLicense"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_selfie"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_driver_selfie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_selfie"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/my_driver_list_driver_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/underline_blue"
        android:text="@string/phone"
        android:textColor="@color/button_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/my_driver_list_driver_email_id"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/my_driver_list_driver_name_text_view" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/phone"
        android:textColor="@color/teal_700"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_phone_number" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id:"
        android:textColor="@color/teal_700"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_email_id"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_driver_email_id"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_email_id" />

    <TextView
        android:id="@+id/my_driver_list_driver_email_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="@string/email_id"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/my_driver_list_driver_selfie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/my_driver_list_driver_phone_number" />

    <TextView
        android:id="@+id/my_driver_list_driver_selfie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="Driver Selfie"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView26"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_edit_text_view"
        app:layout_constraintStart_toEndOf="@+id/my_driver_list_preview_driver_license"
        app:layout_constraintTop_toBottomOf="@+id/my_driver_list_driver_email_id"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="Diver Bank Details"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_driver_list_driver_selfie"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_preview"
        android:gravity="center"
        android:text="Diver Truck Details"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/textView26" />
</androidx.constraintlayout.widget.ConstraintLayout>