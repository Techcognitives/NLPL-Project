<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/my_driver_list_driver_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/success_small"
        android:text="@string/name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_driver_list_edit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_edit_small"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_driver_list_preview_image_view"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_preview_image_view" />

    <ImageView
        android:id="@+id/my_driver_list_preview_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_edit_text_view"
        app:layout_constraintStart_toEndOf="@+id/my_driver_list_driver_phone_number"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_phone_number"
        app:srcCompat="@drawable/ic_preview" />

    <TextView
        android:id="@+id/my_driver_list_driver_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:background="@drawable/underline_blue"
        android:layout_marginEnd="10dp"
        android:textColor="@color/button_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_driver_list_driver_name_text_view"
        app:layout_constraintEnd_toStartOf="@+id/my_driver_list_preview_image_view"
        app:layout_constraintStart_toEndOf="@+id/my_driver_list_driver_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/my_driver_list_driver_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>