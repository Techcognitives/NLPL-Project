<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/all_rounded_small"
    android:backgroundTint="@color/white"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/loads_completed_sp_profilePhto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loads_completed_sp_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/blue_profile_small"
        />

    <TextView
        android:id="@+id/loads_completed_sp_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:text="Service Provider Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loads_completed_pick_city"
        app:layout_constraintStart_toEndOf="@+id/loads_completed_sp_profilePhto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loads_completed_pick_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick city to Drop city"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loads_completed_sp_name"
        app:layout_constraintStart_toStartOf="@+id/loads_completed_sp_name"
        app:layout_constraintTop_toBottomOf="@+id/loads_completed_sp_name" />

    <!--    <RatingBar-->
