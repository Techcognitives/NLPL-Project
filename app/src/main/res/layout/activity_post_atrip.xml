<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_a_load_constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PostATripActivity">

    <include
        android:id="@+id/post_a_trip_action_bar"
        layout="@layout/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_a_trip_action_bar">

        <TextView
            android:id="@+id/delete_trip_in_post_a_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/delete_icon"
            android:gravity="center"
            android:onClick="onClickDeleteTrip"
            android:text="Delete Trip"
            android:textColor="@color/redDark"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delete_trip_in_post_a_load"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date*"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_date_text_view"
                    app:layout_constraintStart_toStartOf="@+id/post_a_trip_date_text_view"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_up_time"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintStart_toStartOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintTop_toTopOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/budgetRs"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_budget_text_view"
                    app:layout_constraintStart_toStartOf="@+id/post_a_trip_budget_text_view"
                    app:layout_constraintTop_toTopOf="@+id/textView9" />

                <TextView
                    android:id="@+id/post_a_trip_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/date"
                    android:onClick="onClickSelectDate"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/post_a_trip_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/time"
                    android:onClick="onClickSelectTime"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_budget_text_view"
                    app:layout_constraintStart_toEndOf="@+id/post_a_trip_date_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/post_a_trip_budget_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/inrRs"
                    android:onClick="onClickSelectBudget"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/post_a_trip_time_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:text="@string/truckTypeAndCapacity"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_date_text_view" />

                <TextView
                    android:id="@+id/post_a_trip_vehicle_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_select_truck" />

                <TextView
                    android:id="@+id/post_a_trip_capacity_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_vehicle_model"
                    app:layout_constraintStart_toStartOf="@+id/post_a_trip_vehicle_model"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_vehicle_model" />

                <TextView
                    android:id="@+id/post_a_load_enter_pick_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:text="@string/pickUpLocationDetails"
                    android:textColor="@color/light_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_capacity_text_view" />

                <TextView
                    android:id="@+id/post_a_load_enter_drop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:text="@string/dropLocationDetails"
                    android:textColor="@color/light_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_select_city_pick_up" />

                <TextView
                    android:id="@+id/post_a_trip_select_city_drop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableEnd="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:ellipsize="end"
                    android:hint="@string/select_city"
                    android:maxLines="1"
                    android:onClick="onClickDropCity"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/post_a_trip_select_state_drop"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_load_enter_drop_location" />

                <TextView
                    android:id="@+id/post_a_trip_select_state_drop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableEnd="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:hint="@string/select_state"
                    android:onClick="onClickDropState"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_select_city_drop"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_select_city_drop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_select_city_drop" />


                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:text="@string/noteAndMaterial"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_select_city_drop" />

                <EditText
                    android:id="@+id/post_a_trip_notes_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:hint="@string/NotesIfAny"
                    android:inputType="textMultiLine"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView30" />

                <TextView
                    android:id="@+id/post_a_trip_select_truck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/selectTruck"
                    android:onClick="onClickSelectTruck"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_select_truck"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_select_truck"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_select_truck" />

                <Button
                    android:id="@+id/post_a_trip_ok_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_active"
                    android:text="POST A TRIP"
                    android:onClick="onClickPostATrip"
                    android:textAllCaps="false"
                    android:textColor="@color/background"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_trip_notes_edit_text" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_load_enter_pick_location"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_load_enter_pick_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_load_enter_pick_location"
                    app:srcCompat="@drawable/ic_start" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_load_enter_drop_location"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_load_enter_drop_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_load_enter_drop_location"
                    app:srcCompat="@drawable/ic_end"
                    app:tint="@color/light_black" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:onClick="onClickShowList"
                    android:paddingEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_notes_edit_text"
                    app:layout_constraintEnd_toEndOf="@+id/post_a_trip_notes_edit_text"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_notes_edit_text"
                    app:srcCompat="@drawable/ic_down" />

                <TextView
                    android:id="@+id/post_a_trip_select_state_pick_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableEnd="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:hint="@string/select_state"
                    android:onClick="onClickPickUpState"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_select_city_pick_up"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_select_city_pick_up"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_select_city_pick_up"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/post_a_trip_select_city_pick_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_border"
                    android:drawableEnd="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:ellipsize="end"
                    android:hint="@string/select_city"
                    android:maxLines="1"
                    android:onClick="onClickPickUpCity"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/post_a_trip_select_state_pick_up"
                    app:layout_constraintTop_toBottomOf="@+id/post_a_load_enter_pick_location" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/bodyType"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_vehicle_model"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_vehicle_model"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_vehicle_model" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/Load_Type"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/post_a_trip_capacity_text_view"
                    app:layout_constraintEnd_toStartOf="@+id/post_a_trip_capacity_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/post_a_trip_capacity_text_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    <include-->
    <!--        android:id="@+id/post_a_load_bottom_nav_bar0"-->
    <!--        layout="@layout/bottom_nav_bar"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:visibility="visible"-->
